<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addTab">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="351dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/Workout_Name_Row"
        >
        <TextView
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:text="Workout"
            android:id="@+id/Workout_Label"
            ></TextView>
        <TextView
            android:layout_width="1000sp"
            android:layout_height="50sp"
            android:paddingRight="10dp"
            android:id="@+id/Workout_Name"
            ></TextView>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/Time_Row"
            >
            <TextView
                android:layout_width="100sp"
                android:layout_height="50sp"
                android:id="@+id/Time_Label"
                android:text="Time"
                ></TextView>
            <EditText
                android:layout_width="100sp"
                android:id="@+id/Hours"
                android:layout_toRightOf="@+id/Hours_Label"
                android:layout_height="50sp"
                android:paddingLeft="10dp"
                android:hint="Hours"
                ></EditText>
            <EditText
                android:layout_width="100sp"
                android:id="@+id/Minutes"
                android:layout_toRightOf="@+id/Hours_Label"
                android:layout_height="50sp"
                android:paddingLeft="10dp"
                android:hint="Minutes"
                ></EditText>

        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:id="@+id/CaloriesCalculator"
            android:text="Calculate Calories Burned!"
            ></Button>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calories Burned: "
            android:id="@+id/CaloriesBurnedLabel"
            ></TextView>
        <TextView
            android:layout_width="100sp"
            android:layout_toRightOf="@+id/CaloriesBurnedLabel"
            android:id="@+id/CaloriesBurned"
            android:layout_height="50sp"
            android:paddingLeft="10dp"

            ></TextView>
        </LinearLayout>
        <Button
            android:paddingTop="10dp"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:id="@+id/DatabaseSaver"
            android:text="Save to data base"
            ></Button>
    </LinearLayout>
</FrameLayout>